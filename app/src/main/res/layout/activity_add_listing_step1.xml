                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/green_gradient_line" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linlytTabContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="15sp"
                    android:layout_marginBottom="8sp"
                    android:orientation="horizontal"
                    android:weightSum="1.0">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                        <LinearLayout
                            android:id="@+id/linlytProducts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/tab_green_centre"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="10sp">

                            <ImageView
                                android:id="@+id/imgProducts"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/white_cicle" />

                            <TextView
                                android:id="@+id/tvProducts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="Products"
                                android:textColor="@color/colorHeaderBackground" />
                        </LinearLayout>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                        <LinearLayout
                            android:id="@+id/linlytServices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/tab_green_centre_outline"
                            android:orientation="horizontal"
                            android:padding="10sp">


                            <ImageView
                                android:id="@+id/imgServices"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/light_blue_circle" />

                            <TextView
                                android:id="@+id/tvServices"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="Services"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                android:textColor="@color/grey2" />

                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearProductType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="8sp"
                android:paddingBottom="8sp">

                <!--<TextView-->
