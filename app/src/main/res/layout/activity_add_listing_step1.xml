            <RelativeLayout
                android:id="@+id/relUploadProductImages"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle_view_grey_border">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/upload_product_img_icon" />

            </RelativeLayout>


            <TextView
                android:id="@+id/txtvwUploadProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40sp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="@string/upload_product_img"
                android:textColor="@color/colorHeaderBackground"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvwExistingPhotos"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Existing Photos"
                android:textColor="#000"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/linlyExistingImageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:background="@drawable/drawable_long_oval">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerProductExistingMultiImages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtvwAddedPhotos"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Added Images"
                android:textColor="#000"
                android:textSize="15sp" />


            <LinearLayout
                android:id="@+id/linlyImageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
