                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/condition" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Condition*"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/green_gradient_line" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linlytTabContain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginBottom="8sp"
                    android:orientation="horizontal"
                    android:weightSum="1.0">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                    <LinearLayout
                        android:id="@+id/linlytNew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/tab_green_centre"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10sp">

                        <ImageView
                            android:id="@+id/imgNew"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/white_cicle" />

                        <TextView
                            android:id="@+id/tvNew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="24dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="New"
                            android:textColor="@color/colorHeaderBackground" />
                    </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
