                android:layout_marginRight="15dp"
                android:background="@drawable/drawable_long_oval"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Title*"
                android:paddingLeft="15dp"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:singleLine="true"
                android:textColor="#666666"
                android:textColorHint="@color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/relProductCategory"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/drawable_long_oval"
                android:padding="5sp">

                <Spinner
                    android:id="@+id/spinnerCategoryAddProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Category*"
                    android:overlapAnchor="false"
                    android:singleLine="true"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:tint="#a6a6a6" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relProductSubCategory"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/drawable_long_oval"
                android:padding="5sp">

                <Spinner
                    android:id="@+id/spnrSubCategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:entries="@array/subcat_arr"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Sub Category*"
                    android:overlapAnchor="false"
                    android:singleLine="true"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imgVwSpinnerArrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:tint="#a6a6a6" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relEmailSignup"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp">

                <EditText
                    android:id="@+id/edittxtDescAddProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/drawable_long_oval"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="top"
                    android:hint="@string/description_product"
                    android:minLines="6"
                    android:paddingLeft="15dp"
                    android:paddingTop="8dp"
                    android:paddingRight="15dp"
                    android:textColor="#666666"
                    android:textColorHint="#000000"
                    android:textSize="15sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnAddProdSaveDraft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_right_gradient"
                    android:fontFamily="@font/montserrat_bold"
                    android:padding="15sp"
                    android:text="@string/save_Draft"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/btnAddPRoductPublish"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_left_gradient"
                    android:drawableRight="@drawable/arrow_right_white"
                    android:fontFamily="@font/montserrat_bold"
                    android:padding="15sp"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
