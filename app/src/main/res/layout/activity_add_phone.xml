        <ImageView
            android:id="@+id/imageView45"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/circle_current_step" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/imgVwLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:tint="@color/text_dark"
            android:src="@drawable/shield" />

        <TextView
            android:id="@+id/tvPhoneVerifyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgVwLogo"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="48dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/strVerifyPhoneTxt"
            android:textColor="@color/text_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearPhone"
            android:layout_below="@id/tvPhoneVerifyTxt"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/relPhoneCode"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edittxt_bg_login"
                android:padding="10sp">

                <ImageView
                    android:id="@+id/imgVmPhoneCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:tint="@color/text_dark"
                    android:src="@drawable/contact" />


                <EditText
                    android:id="@+id/edittxtPhoneCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/imgVmPhoneCode"
                    android:background="@null"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/ContryCode"
                    android:inputType="text"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:paddingLeft="8dp"
                    android:paddingRight="4dp"
                    android:singleLine="true"
                    android:textColor="@color/grey_darker"
                    android:textColorHint="#cccccc"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittxt_bg_login"
                android:padding="10sp">

                <ImageView
                    android:id="@+id/imgVmPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:tint="@color/text_dark"
                    android:src="@drawable/contact" />


                <EditText
                    android:id="@+id/edittxtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/imgVmPhone"
                    android:background="@null"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:padding="5sp"
                    android:maxLength="10"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:textColor="@color/grey_darker"
                    android:textColorHint="#cccccc"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>



