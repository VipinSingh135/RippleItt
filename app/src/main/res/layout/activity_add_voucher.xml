<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rippleitt.activities.AddNewProduct">


    <RelativeLayout
        android:id="@+id/relTopBarAddProduct"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/header">

        <RelativeLayout
            android:id="@+id/relAddProduct_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/imgBackAddProduct"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="@drawable/back_arrow" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txtvwAddVoucher"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Add Voucher"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrlvwWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edittxtAddProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/drawable_long_oval"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Voucher Name*"
                android:inputType="text"
                android:paddingBottom="15sp"
                android:paddingLeft="15dp"
                android:paddingTop="15sp"
                android:singleLine="true"
                android:textColor="#666666"
                android:textColorHint="#000000"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tvExpiryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10sp"
                android:hint="Expiry Date"
                android:background="@drawable/drawable_long_oval"
                android:fontFamily="@font/montserrat_regular"
                android:drawableRight="@drawable/arrow_right"
                android:paddingBottom="15sp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15sp"
                android:singleLine="true"
                android:textColor="#666666"
                android:textColorHint="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvRestrictedDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10sp"
                android:hint="Restricted Days"
                android:background="@drawable/drawable_long_oval"
                android:fontFamily="@font/montserrat_regular"
                android:drawableRight="@drawable/arrow_right"
                android:paddingBottom="15sp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15sp"
                android:singleLine="true"
                android:textColor="#666666"
                android:textColorHint="#000000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:id="@+id/linearProductType"
                android:paddingBottom="15sp"
                android:paddingLeft="15dp"
                android:paddingTop="15sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Voucher Type"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <RadioGroup
                    android:id="@+id/radioGroupProductType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <RadioButton
                        android:id="@+id/rdBtnGive"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.5"
                        android:checked="true"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Give only"
                        android:textSize="16dp" />

                    <RadioButton
                        android:id="@+id/rdBtnGiveGet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.5"
                        android:checked="false"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Give and Get"
                        android:textSize="16dp" />
                </RadioGroup>
            </LinearLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/drawable_long_oval"
                >

                <EditText
                    android:id="@+id/edittxtAddProductPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/spnrType"
                    android:layout_toStartOf="@+id/spnrType"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Amount*"
                    android:inputType="numberDecimal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:textColor="#666666"
                    android:textColorHint="#000000"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/spnrType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:entries="@array/Type"
                    android:fontFamily="@font/montserrat_regular"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <!--<ImageView-->
                    <!--android:id="@+id/imgVwSpinnerArrow3"-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:background="@drawable/ic_keyboard_arrow_down_black_24dp"-->
                    <!--android:tint="#a6a6a6" />-->

            </RelativeLayout>

            <EditText
                android:id="@+id/edtxtQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/drawable_long_oval"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Quantity"
                android:paddingBottom="15sp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15sp"
                android:singleLine="true"
                android:textColor="#666666"
                android:textColorHint="#000000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkbxTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:checked="false"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="I agree to  "

                    android:textColor="#848484"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtvwTCLauncher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Terms and Conditions"
                    android:textColor="#848484" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="."
                    android:textColor="#848484" />
            </LinearLayout>

            <Button
                android:id="@+id/btnAddVoucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_left_gradient"
                android:fontFamily="@font/montserrat_bold"
                android:padding="15sp"
                android:text="@string/add"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
