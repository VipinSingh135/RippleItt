<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rippleitt.activities.ActivityChangePassword">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relTopBarChangePass"
        android:background="@drawable/header"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:id="@+id/relChangePassBack">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:background="@drawable/back_arrow"
                android:layout_centerInParent="true"
                android:id="@+id/imgBackChangePass"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="#ffffff"
            android:layout_marginRight="8dp"

            android:textSize="22sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_centerHorizontal="true"
            android:text="Change Password"
            android:id="@+id/txtvwChangePass"/>

    </RelativeLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:paddingRight="25sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#666666"
        android:singleLine="true"
        android:textColorHint="#000000"
        android:textSize="15sp"
        android:hint="Current Password*"
        android:inputType="textPassword"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20sp"
        android:background="@drawable/drawable_long_oval"
        android:id="@+id/edittxtPass"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:paddingRight="25sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#666666"
        android:singleLine="true"
        android:textColorHint="#000000"
        android:textSize="15sp"
        android:inputType="textPassword"
        android:hint="New Password*"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10sp"
        android:background="@drawable/drawable_long_oval"
        android:id="@+id/edittxtNewPass"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:paddingRight="25sp"
        android:textColor="#666666"
        android:singleLine="true"
        android:fontFamily="@font/montserrat_regular"
        android:inputType="textPassword"
        android:textColorHint="#000000"
        android:textSize="15sp"
        android:hint="@string/confirm_pass"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10sp"
        android:background="@drawable/drawable_long_oval"
        android:id="@+id/edittxtConfirmPass"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSavePass"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:text="Save"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#ffffff"
        android:padding="15sp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_left_gradient"
        android:textAllCaps="false"/>


</LinearLayout>
