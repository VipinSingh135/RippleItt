<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="com.rippleitt.activities.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/relSignup">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:background="@drawable/back_arrow"
                android:layout_centerInParent="true"
                android:id="@+id/imgBackSignup"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/text_dark"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:layout_centerHorizontal="true"
            android:text="FORGOT PASSWORD"
            android:id="@+id/txtvwSignup"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/linlytEmailBox"
            android:orientation="vertical">
            <ImageView
                android:layout_width="220dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imgVwLogo"
                android:background="@drawable/logo"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:layout_centerVertical="true"
            android:id="@+id/linlytEmailBox"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="@drawable/edittxt_bg_login"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/relEmailSignup">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgVmEmailSignup"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/mail"
                    android:layout_centerVertical="true"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/imgVmEmailSignup"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#cccccc"
                    android:textSize="16sp"
                    android:hint="Email*"
                    android:fontFamily="@font/montserrat_regular"
                    android:textCursorDrawable="@drawable/custom_cursor_drawable"
                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:id="@+id/edittxtEmailSignup"
                    />
            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnNextSignup"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Reset Password"
                android:fontFamily="@font/montserrat_bold"
                android:padding="15sp"
                android:textColor="@color/white"
                android:background="@drawable/button_left_gradient"
                android:textAllCaps="false"/>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
