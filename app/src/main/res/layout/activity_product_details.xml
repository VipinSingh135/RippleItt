                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/arrow_down" />

            </RelativeLayout>

            <ListView
                android:id="@+id/listVwReviewsProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginTop="10dp"

                android:background="#dad8d8" />

            <RelativeLayout
                android:id="@+id/relCommentsBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp">

                <TextView
                    android:id="@+id/txtvwLaunchComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:singleLine="true"

                    android:text="Ask Seller"
                    android:textColor="#65b488"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"

                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/arrow_right" />

            </RelativeLayout>



            <Button
                android:id="@+id/btnFAQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="50sp"
                android:background="@drawable/button_left_gradient"
                android:fontFamily="@font/montserrat_regular"
                android:padding="20sp"
                android:text="FAQ"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/relViewHowSell"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txtVwHowSell"
                            android:layout_width="120dp"
                            android:layout_height="20dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center_vertical"
                            android:text="Have one to sell?"
                            android:textColor="#65b488" />


                    </RelativeLayout>

                </LinearLayout>


                <Button
                    android:id="@+id/btnSellOnReppliett"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/button_green_outline"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="    Sell on Rippleitt    "
                    android:textAllCaps="false"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/linBottom"
        android:background="@color/grey2"
        android:layout_marginBottom="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/linBottom"
        android:weightSum="2">

        <Button
            android:id="@+id/btnSetYourPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_left_gradient_edge"
            android:fontFamily="@font/montserrat_regular"
            android:text="Make an Offer"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginRight="2dp"/>

        <Button
            android:id="@+id/btnBuyNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_right_gradient_edge"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginLeft="1dp"
            android:text="@string/strBuyNow"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
