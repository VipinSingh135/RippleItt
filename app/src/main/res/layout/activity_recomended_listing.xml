                    android:text="Ask Seller"/>

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"

                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow_right"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/viewProductDetails"
                android:background="#dad8d8"

                android:layout_marginTop="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/linLytListingBids"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relOtherSellers"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtvwSellerCount"
                    android:textSize="15sp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="#65b488"
                    android:layout_toLeftOf="@+id/relOtherSellersIcon"

                    android:gravity="center_vertical"
                    android:text="Referred o"/>


                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/relOtherSellersIcon"
                    android:background="@drawable/arrow_down"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="40sp"
                android:id="@+id/linlytOtherSellers"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:visibility="gone"
                android:id="@+id/relReviewsProduct"
                android:layout_below="@+id/viewProfile"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/txtVwReviewProduct"
                    android:textSize="15sp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="#65b488"
                    android:layout_toLeftOf="@+id/relDownArrowProduct"

                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center_vertical"
                    android:text="Reviews(0)"/>


                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/relDownArrowProduct"
                    android:background="@drawable/arrow_down"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listVwReviewsProduct"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                />



