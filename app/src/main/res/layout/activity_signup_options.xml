    <RelativeLayout
        android:id="@+id/relativeBusiness"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_left_gradient"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeIndividual"
        app:layout_constraintVertical_bias="0.3">

        <TextView
            android:id="@+id/tvBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/strBusiness"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBusiness"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/imgNextBusiness"
            android:layout_toRightOf="@+id/imgIconBusiness"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="@string/strBusinessText"
            android:textColor="@color/text_dark"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imgNextBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/arrow_right_white" />

        <ImageView
            android:id="@+id/imgIconBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/enterprise" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
