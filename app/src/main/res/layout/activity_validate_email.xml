        </LinearLayout>

        <ImageView
            android:id="@+id/imageView45"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/circle_current_step" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgVwLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:tint="@color/text_dark"
            android:src="@drawable/check_mark" />


        <TextView
            android:id="@+id/tvPhoneVerifyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:layout_marginRight="28dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/strEnterEmailOtp"
            android:textColor="@color/text_dark" />

        <RelativeLayout
            android:id="@+id/relEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittxt_bg_login"
            android:padding="10sp">

            <ImageView
                android:id="@+id/imgVmUserLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:tint="@color/text_dark"
                android:src="@drawable/mail" />


            <EditText
                android:id="@+id/edittxtEmailLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/imgVmUserLogo"
                android:background="@null"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/email"
                android:padding="5sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:textColor="@color/grey_darker"
                android:textColorHint="#cccccc"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relPassLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittxt_bg_login"
            android:padding="10sp">

            <ImageView
                android:id="@+id/imgVmPassLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/contact"
                android:tint="@color/text_dark"/>

            <EditText
                android:id="@+id/edittxtPassLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/imgVmPassLogo"
                android:background="@null"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Verification Code*"
                android:inputType="number"
                android:padding="5sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:textColor="@color/grey_darker"
                android:textColorHint="#cccccc"
                android:textSize="16sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnVerifyOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_left_gradient"
            android:fontFamily="@font/montserrat_bold"
            android:padding="5sp"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/txtvwResendOTP"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/resend_otp"
                android:textAlignment="center"
                android:textColor="@color/colorHeaderBackground"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
