<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rippleitt.activities.ActivityViewBid">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/header"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/relTopBarProductDetail">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:id="@+id/relViewBidsback">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:background="@drawable/back_arrow"
                android:layout_centerInParent="true"
                android:id="@+id/imgBackProductDetail"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="#ffffff"
            android:layout_marginRight="8dp"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_centerHorizontal="true"
            android:text="View Bids"
            android:id="@+id/txtvwProductDetails"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:id="@+id/imgVwAddToWishlist"
            android:background="@drawable/wishlist_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v4.view.ViewPager
                android:id="@+id/vwPagerProductImages"
                android:layout_width="match_parent"
                android:layout_height="190dp"/>


            <!--  <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="180dp"
                  android:background="@drawable/product_pic"
                  android:id="@+id/imgVwProductImage"/>-->


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/relDroneProductDetails"
                android:layout_below="@+id/viewProfile"
                android:layout_marginTop="5dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/txtVwProductName"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_centerVertical="true"
                    android:textColor="#313131"
                    android:layout_toLeftOf="@+id/ratingBarProductDetails"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:text="Drone"/>



                <RatingBar
                    android:theme="@style/RatingBar"
                    android:rating="3"
                    android:stepSize="0.5"
                    android:numStars="5"
                    android:id="@+id/ratingBarProductDetails"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtVwProductDetail"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginLeft="10dp"
                android:text="@string/productdetail"
                android:textSize="14sp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgVwprofileImageDetails"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/profile_pic"
                    app:civ_border_width="2dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    app:civ_border_color="#FF000000"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Jhon Smith"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#4e4d4d"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/relViewProfileDetails"
                    android:layout_toRightOf="@+id/imgVwprofileImageDetails"
                    android:id="@+id/txtVwUserNameDetails"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:id="@+id/relUserAddrDetails">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="23dp"
                    android:id="@+id/imgVmAddrIcon"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/location_icon"
                    android:layout_centerVertical="true"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgVmAddrIcon"
                    android:paddingLeft="8dp"
                    android:textColor="#4e4d4d"
                    android:padding="5dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:maxLines="2"
                    android:text="123 6th St.Melbourne FL 32904"
                    android:paddingRight="8dp"
                    android:id="@+id/txtVwAddrDetails" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="5dp"
                android:id="@+id/relProductPriceDetails">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="23dp"
                    android:id="@+id/imgVmDollarSign"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/dollar_sign"
                    android:layout_centerVertical="true"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/imgVmDollarSign"
                    android:paddingLeft="8dp"
                    android:textColor="#4e4d4d"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center_vertical"

                    android:textSize="15sp"
                    android:text="24,000"
                    android:paddingRight="8dp"
                    android:id="@+id/txtVwProductPrice" />



            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/viewProductDetails"
                android:background="#dad8d8"
                android:layout_marginTop="10dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/relBidsProduct"
                android:layout_below="@+id/viewProfile"
                android:layout_marginTop="5dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/txtVwBidProduct"
                    android:textSize="15sp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#65b488"
                    android:layout_toLeftOf="@+id/relDownArrowProduct"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="Buyer Bidding(3)"/>


                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/relDownArrowProduct"
                    android:background="@drawable/arrow_down"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/viewbid"
                android:background="#dad8d8"
                android:layout_marginTop="10dp"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listVwBidsProduct"
                android:visibility="gone"
                />




        </LinearLayout>
    </ScrollView>

</LinearLayout>
