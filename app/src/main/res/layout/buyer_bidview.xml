<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relBidItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgVwBidBuyerPic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/profile_pic" />

        <TextView
            android:id="@+id/txtVwBidBuyerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:paddingRight="5dp"
            android:layout_marginBottom="12dp"
            android:singleLine="true"
            android:text="Jhon Smith"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5sp"
            android:layout_toRightOf="@+id/imgVwBidBuyerPic"/>

        <TextView
            android:id="@+id/txtvwMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:paddingRight="5dp"
            android:layout_below="@+id/txtVwBidBuyerName"
            android:singleLine="true"
            android:layout_toRightOf="@+id/imgVwBidBuyerPic"
            android:paddingTop="3dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:text="Jhon Smith"
            android:textColor="#9b9b9b"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_toRightOf="@+id/imgVwBidBuyerPic"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgveStarOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3sp"
                    android:src="@drawable/full_rating"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgveStarTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3sp"
                    android:src="@drawable/full_rating"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgveStarThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3sp"
                    android:src="@drawable/full_rating"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgveStarFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3sp"
                    android:src="@drawable/full_rating"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgveStarFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3sp"
                    android:src="@drawable/blank_rating"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/relViewProfileDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            >

            <TextView
                android:id="@+id/txtvwBidAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/montserrat_regular"
                android:text="$ 10,000"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtvwAcceptBid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtvwBidAmount"
                android:fontFamily="@font/montserrat_regular"
                android:paddingTop="5dp"
                android:text="Accept"
                android:textColor="#65b488"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imgvwTickAccepted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtvwBidAmount"
                android:layout_marginRight="10sp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_check_black_24dp"
                android:tint="#65b488" />

            <TextView
                android:id="@+id/txtvwExpired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:paddingRight="5dp"
                android:layout_below="@+id/txtvwBidAmount"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:paddingTop="3dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"
                android:text="Jhon Smith"
                android:textColor="#9b9b9b"
                android:textSize="11sp" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_margin="5sp"
        android:background="#f0f0f0" />

</LinearLayout>

