<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linrListItem"
        android:background="@drawable/stagger_background"
        android:layout_margin="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp">


            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageProductWishlist"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:riv_corner_radius_top_left="10sp"
                app:riv_corner_radius_top_right="10sp"
                app:riv_corner_radius_bottom_right="0sp"
                app:riv_corner_radius_bottom_left="0sp"
                app:riv_border_width="0dip"
                app:riv_border_color="#ffffff"
                android:scaleType="fitStart" />




            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@drawable/wishlist_red_icon"
                android:id="@+id/relAddWishlistImage"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtVwProductWishlistTitle"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:text="Drone"
            android:textColor="#000000"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtVwProductWishlistDetail"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/product_detail_wishlist"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtVwProductWishlistPrice"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="$1200"
            android:singleLine="true"
            android:textColor="#65b488"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtVwProductReferAmount"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="$1200"
            android:visibility="gone"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#65b488"
            android:textSize="13sp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="#dedcdc"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgVwprofileImageHome"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/profile_pic"

                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                app:civ_border_color="#FF000000"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Jhon Smith"
                android:textColor="#4e4d4d"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/relViewProfileDetails"
                android:layout_toRightOf="@+id/imgVwprofileImageHome"
                android:id="@+id/txtVwUserNameHome"/>
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>