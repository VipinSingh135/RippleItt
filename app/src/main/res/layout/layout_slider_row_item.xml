<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="5dp"
            android:id="@+id/frmlytHighlighter"
            android:layout_height="match_parent">
        </FrameLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/dashboard"
            android:id="@+id/imgvwItemIcon"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:paddingTop="10sp"
                android:layout_marginLeft="25sp"
                android:fontFamily="@font/montserrat_regular"
                android:paddingBottom="10sp"
                android:id="@+id/txtvwSliderItem"
                android:layout_gravity="center_vertical"
                android:text="XXXXXXX"/>

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/viewMessage"
                android:background="@drawable/circle_bg"
                android:layout_toRightOf="@+id/txtvwSliderItem"
                android:layout_alignTop="@+id/txtvwSliderItem"

                />
        </RelativeLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="70sp"
        android:id="@+id/frmlytDivider"
        android:background="@color/light_grey"/>

</LinearLayout>

