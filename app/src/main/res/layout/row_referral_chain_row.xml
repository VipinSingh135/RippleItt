<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:background="#f7f7f7"
        android:paddingBottom="4dp"
        android:layout_height="wrap_content">

        <!--<de.hdodenhof.circleimageview.CircleImageView-->
            <!--android:id="@+id/imgvwRefreeImage"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginBottom="6dp"-->
            <!--android:layout_marginLeft="14dp"-->
            <!--android:layout_marginTop="6dp"-->
            <!--android:padding="3sp"-->
            <!--android:src="@drawable/default_profile_icon"-->
            <!--app:civ_border_color="#FF000000" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/relAmount">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/grey_darker"
                android:textSize="10sp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_regular"
                android:maxLines="1"
                android:id="@+id/txtvwDate"
                android:text="Referred to"
                />

            <TextView
                android:id="@+id/txtvwReferredTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_regular"
                android:maxLines="1"
                android:text="Referred to"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relAmount"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            >

            <FrameLayout
                android:id="@+id/frmlytOrderFlagColor"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#65b488"
                android:padding="2dp">

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_gravity="center"
                    android:text="Buying "
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </FrameLayout>

            <!--<TextView-->
            <!--android:id="@+id/"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:text="Sell"-->
            <!--android:textColor="@color/colorPrimary" />-->

            <TextView
                android:id="@+id/txtvwRewardEarned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frmlytOrderFlagColor"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorHeaderBackground"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relativeLayout"
        android:background="#e7e7e7">

    </FrameLayout>
</RelativeLayout>