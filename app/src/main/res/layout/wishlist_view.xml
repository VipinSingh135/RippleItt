<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linrListItem"
        android:background="@drawable/stagger_background"
        android:layout_margin="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp">


            <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageProductWishlist"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:riv_corner_radius_top_left="10sp"
                app:riv_corner_radius_top_right="10sp"
                app:riv_corner_radius_bottom_right="0sp"
                app:riv_corner_radius_bottom_left="0sp"
                app:riv_border_width="0dip"
                app:riv_border_color="#ffffff"
                android:scaleType="fitStart" />

            <FrameLayout
                android:id="@+id/frmlytOrderFlagColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/curved_top_green_background"
                android:padding="3sp">

                <TextView
                    android:id="@+id/txtvwLabelOrderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="New "
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </FrameLayout>


        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/wishlist_red_icon"
            android:id="@+id/relAddWishlistImage"/>
        </RelativeLayout>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtVwProductWishlistTitle"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:text="Drone"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtVwProductWishlistDetail"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:fontFamily="@font/montserrat_regular"
            android:ellipsize="end"
            android:text="@string/product_detail_wishlist"
            android:textSize="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/txtVwProductWishlistPrice"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="$1200"
                android:fontFamily="@font/montserrat_regular"
                android:singleLine="true"
                android:textColor="#65b488"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtVwVoucherPrice"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="$1200"
                android:fontFamily="@font/montserrat_bold"
                android:singleLine="true"
                android:textColor="@color/fb_blue"
                android:textSize="12sp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtVwProductReferAmount"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="$1200"
            android:maxLines="1"
            android:visibility="gone"
            android:ellipsize="end"
            android:singleLine="true"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="#65b488"
            android:textSize="14sp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="#dedcdc"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgVwprofileImageHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/default_profile_icon"

            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:civ_border_color="#FF000000"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jhon Smith"
            android:textColor="#4e4d4d"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:fontFamily="@font/montserrat_regular"

            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/relViewProfileDetails"
            android:layout_toRightOf="@+id/imgVwprofileImageHome"
            android:id="@+id/txtVwUserNameHome"/>
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>