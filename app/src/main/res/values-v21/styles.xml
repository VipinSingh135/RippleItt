<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#289b98</item><!-- buttons OK cancel-->
        <item name="android:textColorPrimary">#289b98</item><!--text in message-->
        <item name="android:background">#ffffff</item> <!-- all bg-->
        <!-- items color -->
        <item name="textColorAlertDialogListItem">#289b98</item>
    </style>
    <style name="MyTitleTextStyle">
        <item name="android:textColor">#289b98</item><!-- title color-->
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>


</resources>
